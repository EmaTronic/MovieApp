<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

  <androidx.fragment.app.FragmentContainerView
      android:id="@+id/nav_host_fragment"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:name="androidx.navigation.fragment.NavHostFragment"
      app:defaultNavHost="true"
      app:navGraph="@navigation/main_graph"/>



</androidx.constraintlayout.widget.ConstraintLayout>


  <!-- Línea	Para qué sirve
android:name="androidx.navigation.fragment.NavHostFragment"	Convierte al contenedor en un NavHost que manejará navegación
app:defaultNavHost="true"	Hace que este NavHost sea el principal, maneja el botón back automáticamente
app:navGraph="@navigation/main_graph"	Selecciona el archivo de rutas que va a usar el NavHost


-->